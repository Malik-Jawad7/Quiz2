    color: var(--primary-blue);
}

.pending-box .box-number {
    color: var(--danger-red);
}

.box-label {
    font-size: 0.6875rem;
    color: var(--gray-600);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-weight: 600;
    line-height: 1;
}


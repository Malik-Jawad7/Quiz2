    margin-bottom: 1.5rem;
    text-align: center;
    line-height: 1.5;
    font-size: 0.875rem;
}

.modal-stats {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    margin: 1.5rem 0;
}

.modal-stat {
    text-align: center;
    padding: 1rem 0.5rem;
    background: var(--gray-50);
    border-radius: 8px;
    border: 1px solid var(--gray-200);
}

.modal-stat .stat-value {
    font-size: 1.5rem;
    font-weight: 800;
    margin-bottom: 0.375rem;
    color: var(--primary-blue);
}

.modal-stat .stat-label {
    font-size: 0.75rem;
    color: var(--gray-600);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-weight: 600;
}

.modal-actions {
    display: flex;
    gap: 0.75rem;
    justify-content: center;
}

.modal-btn {
    padding: 0.625rem 1.25rem;
    border-radius: 8px;
    font-size: 0.75rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    border: 2px solid transparent;
    min-width: 120px;
    text-align: center;
}

.modal-btn.cancel {
    background: white;
    border-color: var(--gray-300);
    color: var(--gray-600);
}

.modal-btn.cancel:hover {
    background: var(--gray-50);
    border-color: var(--gray-400);
    transform: translateY(-1px);
}

.modal-btn.confirm {
    background: linear-gradient(135deg, var(--danger-red) 0%, var(--danger-dark) 100%);
    color: white;
}

.modal-btn.confirm:hover:not(:disabled) {
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
}

.modal-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none !important;
}

/* ========== RESPONSIVE ========== */
@media (max-width: 768px) {
    .navigation-buttons {
        flex-direction: column;
        gap: 0.75rem;
    }
    
    .nav-btn, .action-btn {
        width: 100%;
    }
    
    .quick-actions {
        width: 100%;
    }
    
    .question-grid {
        grid-template-columns: repeat(4, 1fr);
    }
    
    .modal-stats {
